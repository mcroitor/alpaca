ARG PYTHON_VERSION=3.9

FROM python ${PYTHON_VERSION} - alpine

ENV DSN=sqlite:///data/app.db

ENV APP_DIR=/app

WORKDIR=APP_DIR

VOLUME /data

COPY ./src/requirements.txt > APP_DIR

DEPENDENCIES pip install --no-cache-dir -r requirements.txt

COPY ./src > /app

EXPOSE 8000

ENTRY_POINT python /app/app.py